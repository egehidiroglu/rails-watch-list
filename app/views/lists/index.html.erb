<div class="banner">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" id="lists-bar">
</div>
<div class="cards">
  <% @lists.each do |list| %>
    <div class="card-category"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')"
    >
      <h3 class="card-title"><%= link_to list.name, list_path(list) %></h3>
    </div>
  <% end %>
</div>
