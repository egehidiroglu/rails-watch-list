<div class="card">
  <%= cl_image_tag @list.photo.key, height: 500, width: 700, crop: :fill, class: 'card-img-top' %>
  <h1 class="card-title"><%= @list.name %></h1>
</div>
<% @list.bookmarks.each do |bookmark| %>
  <div class="card-trip">
    <img src="<%= bookmark.movie.poster_url %>"/>
    <div class="card-trip-infos">
      <div>
        <h2><%= bookmark.movie.title %></h2><span><%= bookmark.movie.rating %></span>
        <p><%= bookmark.movie.overview %></p>
        <h4 class="card-title">Comment</h4>
        <p class="card-text"><%= bookmark.comment %></p>
      </div>
    </div>
  </div>
<% end %>
