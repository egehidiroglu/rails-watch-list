<h1><%= @list.name %></h1>
<% @list.bookmarks.each do |bookmark| %>
  <div class="card">
    <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>" class="card-img-top">
    <div class="card-body">
      <h3 class="card-title"><%= bookmark.movie.title %></h3><span><%= bookmark.movie.rating %></span>
      <p class="card-text"><%= bookmark.movie.overview %></p>
      <h4 class="card-title">Comment</h4>
      <p class="card-title"><%= bookmark.comment %></p>
      <%= link_to 'Delete Bookmark', bookmark_path(bookmark), data: { turbo_method: :delete } %>
    </div>
  </div>
<% end %>
